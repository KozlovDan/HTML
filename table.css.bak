/* Стили для таблицы */
table {
    width: 100%;
    border-collapse: collapse; /* Убираем промежутки между ячейками */
    margin: 20px 0; /* Отступы сверху и снизу */
}

caption {
    font-size: 1.5em; /* Размер шрифта заголовка таблицы */
    margin-bottom: 10px; /* Отступ под заголовком таблицы */
}

th, td {
    padding: 10px; /* Отступы внутри ячеек */
    text-align: left; /* Выравнивание текста в ячейках */
}

thead {
    background-color: #4CAF50; /* Цвет фона заголовка таблицы */
    color: white; /* Цвет текста заголовка таблицы */
}

tbody tr:nth-child(even) {
    background-color: #adffd6; /* Цвет фона для четных строк */
}

tbody tr:nth-child(odd) {
    background-color: #adffad; /* Цвет фона для нечетных строк */
}

tbody tr:hover {
    background-color: #ddd; /* Цвет фона при наведении на строку */
}
